<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Theme\Block\Html\Footer" name="absolute_footer"
                   template="SportStore_CopyrightInfo::copyright.phtml">
                <arguments>
                    <argument name="company_name" xsi:type="string">Sport Store Corporation</argument>
                    <argument name="foundation_date" xsi:type="string">March 12, 2011</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="copyright" remove="true" />
    </body>
</page>
